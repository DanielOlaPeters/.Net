@page
@model Lab5.Pages.Predictions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Prediction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Prediction.Question" class="control-label"></label>
                <div class="form-check">
                    <input type="radio" asp-for="Prediction.Question" name="Question" id="computerQuestion" value="Computer" class="form-check-input" checked />
                    <label for="computerQuestion" class="form-check-label">What will the computers look like in 20 years?</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="Prediction.Question" name="Question" id="earthQuestion" value="Earth" class="form-check-input" />
                    <label for="earthQuestion" class="form-check-label">What will the earth look like in 20 years?</label>
                </div>

                <div class="form-btn btn-sm float-left ">
                    <input type="file" asp-for="Prediction.FileName" id="imageFile" name="imageFile" />
                </div>
                <button type="submit" class="btn btn-primary" id="uploadButton">Upload Now</button>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


