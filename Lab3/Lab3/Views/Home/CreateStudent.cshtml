@{
            Layout = "_Layout";
    ViewData["Title"] = "Create Student";
}

<h3>Create Your Favorite Student</h3> 

<form asp-controller="Home" asp-action="DisplayStudent" method="post">

<table>
        <tr>
            <td><label for="firstName">First Name:</label></td>
            <td><input type="text" id="firstName" name="FirstName" ></td>
        </tr>
        <tr>
            <td><label for="lastName">Last Name:</label></td>
            <td><input type="text" id="lastName" name="LastName" ></td>
        </tr>
        <tr>
            <td><label for="studentId">Student ID:</label></td>
            <td><input type="number" id="studentId" name="StudentId" min="0" ></td>
        </tr>
        <tr>
            <td><label for="email">Email Address:</label></td>
            <td><input type="email" id="EmailAddress" name="EmailAddress" ></td>
        </tr>
        <tr>
            <td><label for="password">Password:</label></td>
            <td><input type="password" id="password" name="pass" ></td>
        </tr>
        <tr>
            <td><label for="description">Description of Student:</label></td>
            <td><input type="text" id="description" name="Description" ></td>
        </tr>
        <tr>
            <td colspan="2"><button type="submit">Create</button></td>
        </tr>
    </table>
</form>
